{
	"name": "Saweria Twitch Bot",
	"description": "Easily run a Twitch bot that sends a message to your channel when you receive a donation from Saweria.",
	"version": "0.0.1",
	"manifest_version": 3,
	"action": {
		"default_title": "Saweria Twitch Bot",
		"default_icon": "icon48.png",
		"default_popup": "index.html"
	},
	"icons": {
		"128": "icon128.png",
		"48": "icon48.png",
		"16": "icon16.png"
	},
	"permissions": ["tabs", "scripting", "storage", "webRequest"],
	"host_permissions": ["*://*.saweria.co/*"],
	"background": {
		"service_worker": "background.js",
		"type": "module"
	}
}
